div.main.viewport

ul.list
  margin-bottom 90px
  padding-top 0px
  padding-left 0px
  
  li
    border-bottom 1px solid #ddd
    padding-left 15px
    padding-top 10px

form
  position fixed
  bottom 0px
  left 0px
  right 0px

  padding: 6px;
  border-top: 1px solid #c5c5c5;
  vbg-gradient(#ffffff, #dedfe0)
  box-shadow(0, -1px, 2px, rgba(0, 0, 0, 0.1))
  
  input[type=text]
    width 97%
  
  input[type=submit]
    button()
    float right
    margin-right 4px
  
  input[type=file]
    float left
    margin-top 6px